rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == "bengo0469@gmail.com";
    }

    function isSelf(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // פרטי משתמש (שאלון onboarding וכו') – רק בעל החשבון או אדמין
    match /users/{uid} {
      allow read, write: if isSelf(uid) || isAdmin();
    }

    // אירועים וכל תתי-האוספים (משימות, קבצים, הודעות, נרשמים...)
    match /events/{eventId}/{document=**} {
      allow read, write: if isSignedIn();
    }

    // קולקציות נוספות (משימות קבועות, וכו') – מורשות רק למשתמשים מחוברים
    match /default_tasks/{docId} {
      allow read, write: if isSignedIn();
    }

    // חיבורי אינטגרציה (כמו Green API) - אדמין כותב, כל משתמש מחובר קורא כדי לאפשר שליחה אוטומטית
    match /integrations/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // מגבלת קצב שליחת וואטסאפ - כל משתמש מחובר יכול לעדכן חותמת זמן
    match /rate_limits/{docId} {
      allow read, write: if isSignedIn();
    }

    // מאגר קבוצות וואטסאפ - רק אדמין
    match /whatsapp_groups/{docId} {
      allow read, write: if isAdmin();
    }

    // סטטיסטיקות משימות חוזרות
    match /repeat_tasks/{docId} {
      allow read: if isAdmin();
      allow write: if isSignedIn();
    }

    // גלריית תמונות לדף ההרשמה הציבורי
    match /register_gallery/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ברירת מחדל: חסום
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
