rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // קריאה: מותר למשתמש מחובר או למי שמחזיק token הורדה
      allow read: if request.auth != null
                  || (resource != null
                      && resource.metadata.firebaseStorageDownloadTokens != null
                      && request.query.token in resource.metadata.firebaseStorageDownloadTokens.split(","));
      // כתיבה: רק משתמש מחובר.
      // חריג: תיקיית instagram_uploads מוגבלת לאדמין בלבד.
      allow write: if request.auth != null && (
        !allPaths.matches('^instagram_uploads/.*') || 
        request.auth.token.email == "bengo0469@gmail.com"
      );
    }
  }
}
